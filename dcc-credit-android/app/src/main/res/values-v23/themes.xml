<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DccLightTheme.App">
        <item name="android:windowLightStatusBar">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/transition_window_content</item>
        <item name="android:windowExitTransition">@transition/transition_window_content</item>

        <item name="android:windowSharedElementEnterTransition">@transition/default_transition
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/default_transition</item>
    </style>


    <style name="DccLightTheme.App.Immerse">
        <item name="android:windowLightStatusBar">false</item>
        <item name="navigationIcon">@drawable/arrow_left_white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DccLightTheme.App.Transparent.Aff">
        <item name="android:windowBackground">@color/blue_magenta_loading</item>
        <item name="android:actionMenuTextColor">?android:attr/textColorPrimary</item>
        <item name="navigationIcon">@drawable/arrow_left_white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>