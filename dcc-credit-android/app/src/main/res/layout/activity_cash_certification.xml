<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.wexchain.android.dcc.vm.ViewModelHelper" />

        <variable
            name="asIdVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asBankVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asTongniuVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="vm"
            type="io.wexchain.android.dcc.vm.DccExchangeVm" />

        <variable
            name="cert"
            type="io.wexchain.android.dcc.modules.cashloan.vm.CashCertificationVm" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5FD">

        <include layout="@layout/include_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/cash_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingBottom="10dp"
                android:text="基本认证信息"
                android:textColor="#FF000000"
                android:textSize="17sp" />

            <include
                android:id="@+id/card_as_id"
                layout="@layout/include_tncard_auth_status"
                app:vm="@{asIdVm}" />

            <include
                android:id="@+id/card_as_bank"
                layout="@layout/include_tncard_auth_status"
                app:vm="@{asBankVm}" />

            <include
                android:id="@+id/card_as_tongniu"
                layout="@layout/include_tncard_auth_status"
                app:vm="@{asTongniuVm}" />

            <RelativeLayout
                android:id="@+id/card_as_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/bg_round_rect_noframe_white"
                    android:minHeight="80dp"
                    android:onClick="@{(v)->cert.userinfoCert()}">

                    <TextView
                        android:id="@+id/tv_as_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="信息完善"
                        android:textColor="@color/text_dark"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />


                    <TextView
                        android:id="@+id/tv_as_status"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="16dp"
                        android:width="80dp"
                        android:background="@{cert.isCert?@drawable/shape_certstatu_green:@drawable/shape_certstatu_purple}"
                        android:gravity="center"
                        android:text="@{cert.isCert?@string/cash_loan_perfect:@string/cash_loan_perfect_no}"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:background="@drawable/shape_certstatu_green"
                        tools:text="已完善" />

                </android.support.constraint.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/iv_cert_type"
                        android:layout_width="56dp"
                        android:layout_height="50dp"
                        android:maxWidth="60dp"
                        android:src="@drawable/cash_loan_info" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:text="信息完善"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前DCC持有量:"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{ViewModelHelper.getBalanceStr(vm.dcc,vm.juzixHolding)}"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp"
                    tools:text="4738.93DCC" />

                <TextView
                    android:id="@+id/cert_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v)->cert.showTips()}"
                    android:text="@string/cash_loan_dcc_tips"
                    android:textColor="#7B40FF" />

            </LinearLayout>

            <Button
                android:id="@+id/cert_commit"
                style="@style/Widget.AppCompat.Button.Dcc.Full"
                setisEnable="@{cert.btnStatus}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="@{(v)->cert.commitCert()}"
                android:text="提交" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
