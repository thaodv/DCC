<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="io.wexchain.android.dcc.vm.ViewModelHelper" />

        <variable
            name="asIdVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asBankVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asTongniuVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />


    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5FD">

        <include layout="@layout/include_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/cash_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="基本认证信息"
                android:textColor="#FF000000"
                android:paddingBottom="10dp"
                android:textSize="17sp" />

            <include
                android:id="@+id/card_as_id"
                layout="@layout/include_newcard_auth_status"
                app:vm="@{asIdVm}" />

            <include
                android:id="@+id/card_as_bank"
                layout="@layout/include_newcard_auth_status"
                app:vm="@{asBankVm}" />

            <include
                android:id="@+id/card_as_tongniu"
                layout="@layout/include_newcard_auth_status"
                app:vm="@{asTongniuVm}" />

            <RelativeLayout
                android:id="@+id/card_as_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/bg_round_rect_noframe_white"
                    android:minHeight="80dp"
                    >

                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/tv_as_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textColor="@color/text_dark"
                        android:textSize="17sp"
                        android:text="信息完善"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />


                    <TextView
                        android:id="@+id/tv_as_status"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="16dp"
                        android:width="80dp"
                        android:gravity="center"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="@string/verified" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_cert_type"
                    android:layout_width="56dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:maxWidth="60dp"
                    tools:src="@drawable/shape_bank_card" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
