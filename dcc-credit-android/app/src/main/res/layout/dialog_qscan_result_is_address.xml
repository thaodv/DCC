<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_address_book"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描到托管钱包地址，您可以"
                android:textColor="#4A4A4A"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                tools:text="@sample/address"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_trust_transfer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="托管钱包转账"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_digest_transfer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="数字钱包转账"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_trust_withdraw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="从托管钱包提币"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#4A4A4A"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>
