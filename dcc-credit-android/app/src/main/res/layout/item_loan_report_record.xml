<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="io.wexchain.android.dcc.vm.ViewModelHelper"/>
        <variable
                name="report"
                type="io.wexchain.dccchainservice.domain.LoanReport"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="96dp"
            android:background="@{ViewModelHelper.loanReportBg(context,report)}"
            tools:background="@drawable/bg_loan_report_status_settlement_incomplete"
            >

        <TextView
                android:id="@+id/tv_order_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"
                android:textColor="@color/text_white"
                app:layout_constraintTop_toTopOf="parent"
                />

        <TextView
                android:id="@+id/tv_order_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{report.orderIdStr}"
                tools:text="123"
                android:textColor="@color/text_white"
                app:layout_constraintLeft_toRightOf="@id/tv_order_id_label"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_order_id_label"
                />

        <TextView
                android:id="@+id/tv_lender_org_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放币机构:"
                app:layout_constraintTop_toBottomOf="@id/tv_order_id_label"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_white"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <TextView
                android:id="@+id/tv_lender_org_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{report.lenderName}"
                tools:text="XX机构"
                android:textColor="@color/text_white"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_lender_org_label"
                app:layout_constraintLeft_toRightOf="@id/tv_lender_org_label"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <TextView
                android:id="@+id/tv_loan_deliver_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/time_format_yyyymmdd_hhmmss(report.deliverDate)}"
                tools:text="@tools:sample/date/ddmmyy"
                android:textColor="@color/text_white"
                app:layout_constraintTop_toBottomOf="@id/tv_lender_org_label"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="4dp"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:tint="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{report.settlementComplete?`已结清`:`未结清`}"
                android:background="@drawable/round_rect_border_white"
                android:padding="2dp"
                tools:text="已结清"
                android:textColor="@color/text_white"
                app:layout_constraintRight_toLeftOf="@id/iv_arrow"
                android:layout_marginRight="8dp"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                app:layout_constraintRight_toLeftOf="@id/iv_arrow"
                android:layout_marginRight="8dp"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_lender_org_label"
                android:text="@{ViewModelHelper.concatWithoutNull(report.amount.toPlainString(),report.assetCode)}"
                tools:text="100.0000ETH"
                visibleOrGone="@{!report.fromOtherAddress}"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无法获取借币信息"
                android:textColor="@color/text_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="4dp"
                visibleOrGone="@{report.fromOtherAddress}"
                />
        <TextView
                android:id="@+id/tv_loan_wallet_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借款钱包:"
                android:textColor="@color/text_white"
                app:layout_constraintTop_toBottomOf="@id/tv_order_id_label"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                visibleOrGone="@{report.fromOtherAddress}"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{report.borrowerAddress}"
                android:textColor="@color/text_white"
                app:layout_constraintTop_toBottomOf="@id/tv_loan_wallet_label"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                visibleOrGone="@{report.fromOtherAddress}"
                tools:text="@sample/address"
                />

    </android.support.constraint.ConstraintLayout>
</layout>