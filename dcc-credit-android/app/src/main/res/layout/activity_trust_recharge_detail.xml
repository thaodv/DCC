<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="io.wexchain.android.dcc.modules.trustpocket.TrustRechargeDetailActivity">

        <include layout="@layout/include_toolbar"/>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#404040"
            android:textSize="24sp"
            tools:text="+9 DCC"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="充币"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                tools:text="已完成"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                tools:text="1234567890"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="地址"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                tools:text="0x605c1af6c86817d4c258490dda02c0d9b8094b37"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TxHash"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                tools:text="0x02854e68ee0b9057e6ff9c7f66dd6193e331527138be3c29a3e0bab08127329e"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#4a4a4a"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#4a4a4a"
                android:textSize="16sp"
                tools:text="2019-10-10 12:00:00"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>

    </LinearLayout>
</layout>
