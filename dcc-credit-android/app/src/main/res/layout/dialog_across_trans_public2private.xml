<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_address_book"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/trans_sure"
                android:textColor="#404040"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/ibt_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_address_book_query_delete"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="@string/trans_orientation"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_trans_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="To DCC@Distributed Credit"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_money"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#FF404040"
                    android:textSize="14sp"
                    tools:text="7000 DCC"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="@string/max_absenteeism"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_max_absenteeism"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#FF404040"
                    android:textSize="14sp"
                    tools:text="21 ETH"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:text="@string/holding_count"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_holding_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#FF404040"
                    android:textSize="14sp"
                    tools:text="7000 DCC"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FF404040"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_holding_count_ETH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="#FF404040"
                    android:textSize="14sp"
                    tools:text="7000 ETH"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_sure"
            style="@style/Widget.AppCompat.Button.Dcc.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_padding_horizontal"
            android:layout_marginLeft="@dimen/content_padding_horizontal"
            android:layout_marginRight="@dimen/content_padding_horizontal"
            android:text="@string/sure"/>

    </LinearLayout>

</RelativeLayout>
