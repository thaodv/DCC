<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tokenplus"
            type="io.wexchain.android.dcc.fragment.home.vm.ServiceCardVm" />

        <variable
            name="searchain"
            type="io.wexchain.android.dcc.fragment.home.vm.ServiceCardVm" />

        <variable
            name="ecology"
            type="io.wexchain.android.dcc.fragment.home.vm.ServiceCardVm" />

        <variable
            name="certification"
            type="io.wexchain.android.dcc.fragment.home.vm.ServiceCardVm" />

        <variable
            name="login"
            type="io.wexchain.android.dcc.fragment.home.vm.ServiceCardVm" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mine_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="服务"
            android:textColor="@color/main_tab"
            android:textSize="17sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#F8F8FF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/service_toot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_card_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="我的征信"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <include
                    android:id="@+id/view_card_passport"
                    layout="@layout/include_card_passport" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/home_credit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="信用借币"
                        android:textColor="#000"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/home_credit_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="更多币种"
                        android:textColor="#C009FF"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/home_borrow"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/home_credit_title">

                        <ImageView
                            android:id="@+id/home_credit_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:src="@drawable/home_credit" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_toRightOf="@id/home_credit_img"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="丰富币种等你来借"
                                android:textColor="@color/FF4A4A4A"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="做空、抄底给你再来一把的机会"
                                android:textColor="#BAC0C5"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_borrow"
                            style="@style/Widget.AppCompat.Button.Dcc.Violet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="去借币"
                            android:textColor="#fff" />
                    </RelativeLayout>

                </android.support.constraint.ConstraintLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_service_loan" />


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F8FF">

                    <TextView
                        android:id="@+id/home_bsx_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingTop="5dp"
                        android:text="币生息"
                        android:textColor="#000"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/home_bsx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:minHeight="60dp"
                        android:paddingTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/home_bsx_title">

                        <ImageView
                            android:id="@+id/home_credit_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:src="@drawable/service_bsx" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_toRightOf="@id/home_credit_img1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/service_bsx_title"
                                android:textColor="@color/FF4A4A4A"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="极低风险跨市套利让你持币有红利"
                                android:textColor="#BAC0C5"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_bsx"
                            style="@style/Widget.AppCompat.Button.Dcc.Violet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="去认购"
                            android:textColor="#fff" />
                    </RelativeLayout>


                </android.support.constraint.ConstraintLayout>

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <include
                    layout="@layout/include_service_card"
                    app:vm="@{tokenplus}" />

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <include
                    layout="@layout/include_service_card"
                    app:vm="@{searchain}" />

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <include
                    layout="@layout/include_service_card"
                    app:vm="@{ecology}" />

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <include
                    layout="@layout/include_service_card"
                    app:vm="@{certification}" />

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp"
                    android:background="#F8F8FF" />

                <include
                    layout="@layout/include_service_card"
                    app:vm="@{login}" />

                <TextView
                    android:id="@+id/service_mail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#F8F8FF"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="商务合作联系方式  yimtoken1@163.com"
                    android:textColor="#9B9B9B"
                    android:textSize="12sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>

