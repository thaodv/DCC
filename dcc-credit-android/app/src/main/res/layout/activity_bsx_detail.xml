<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="saleInfo"
            type="io.wexchain.android.dcc.domain.SaleInfo"
            />

        <variable
            name="minAmountPerHandDCC"
            type="String"
            />

        <variable
            name="totalamountDCC"
            type="String"
            />

        <variable
            name="lastamountDCC"
            type="String"
            />

        <variable
            name="canbuy"
            type="boolean"
            />

    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.wexchain.android.dcc.modules.bsx.BsxDetailActivity"
        tools:ignore="HardcodedText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/include_toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/background_bluell"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预期年化收益"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{saleInfo.annualRateP() }"
                    android:textColor="@color/white"
                    android:textSize="31sp"
                    tools:text="10.00%"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#6867CD"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="起购数量"
                        android:textColor="@color/white50"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_buylimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="@{minAmountPerHandDCC}"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="10"/>

                </LinearLayout>

                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white50"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="管理期限"
                        android:textColor="@color/white50"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="@{saleInfo.periodDay() }"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="10"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="认购币种"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/realnamecert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/upgrade_title_color"
                    android:textSize="14sp"
                    tools:text="DCC"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="收益方式"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@{saleInfo.profitMethod}"
                    android:textColor="@color/upgrade_title_color"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="产品额度"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_productlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@{totalamountDCC}"
                    android:textColor="@color/upgrade_title_color"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="时间限制"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_timelimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@{saleInfo.showCloseTime()}"
                    android:textColor="@color/upgrade_title_color"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="剩余额度"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_lostlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@{lastamountDCC}"
                    android:textColor="@color/FFED190F"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FFF8F8FF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="认购流程"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFEFEFEF"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/ic_purpuledot"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_purpuledot"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_purpuledot"/>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <LinearLayout
                    android:id="@+id/ll_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:minWidth="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="起息日"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_profitday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="@{saleInfo.showIncomeTime()}"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/ll_center"
                    android:minWidth="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="认购开始"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_buyday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="今日"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/ll_center"
                    android:minWidth="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="到期日"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_endday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="@{saleInfo.showEndTime()}"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="到期日如为节假日，则在节假日后的第一个工作日到期"
                android:textColor="#FF4A4A4A"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FFF8F8FF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="产品简介"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EFEFEF"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@{saleInfo.presentation}"
                android:textColor="#FF4A4A4A"
                android:textSize="14sp"
                tools:text="      币生息DCC私链1期是面向DCC用户的一款固定周期、固定DCC收益的数字资产增值理财产品；具有：极低风险（不包括数字资产本身价格的涨跌），保本保息、到期还本付息的特点。

        用户在募集期内可以认购币生息DCC私链1期理财产品，理财收益以DCC私链形式返回，平台为DCC用户提供DCC私链资产理财和到期自动赎回服务，于到期日的23:59:59之前，会自动将本金和收益（收益以DCC私链形式计息）返还到用户的钱包地址。

        本理财产品由基于Linux环境搭建的量化交易系统TokenPlus提供支持，作为回馈DCC用户的福利，无任何风险。用户可在【币生息持仓】中查看币生息理财产品的收益。"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FFF8F8FF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="本服务由【Token Plus】提供"
                android:textColor="#FF4A4A4A"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/bt_buy"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#B2484848"
                android:gravity="center"
                android:text="已结束"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"/>
        </LinearLayout>

    </ScrollView>

</layout>
