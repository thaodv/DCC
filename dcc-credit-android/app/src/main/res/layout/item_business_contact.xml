<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="@dimen/content_padding_horizontal"
        android:paddingRight="@dimen/content_padding_horizontal"
        >
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_business_mail"
            android:adjustViewBounds="true"
            />

    <TextView
            android:id="@+id/tv_business_mail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
            android:textColor="@color/text_white"
            android:text="@string/for_questions_and_business_collaboration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

    <TextView
            android:id="@+id/tv_business_mail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.DccSubTitle"
            android:textColor="@color/text_white"
            app:layout_constraintLeft_toLeftOf="@id/tv_business_mail_title"
            app:layout_constraintTop_toBottomOf="@id/tv_business_mail_title"
            android:layout_marginTop="8dp"
            android:text="@string/bitexpress_info_mail_address"
            />


</android.support.constraint.ConstraintLayout>