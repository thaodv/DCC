<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_delete_address_book"
        android:orientation="vertical"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/payment_pay_dialog_title"
                android:textColor="#4A4A4A"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/ibt_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/icon_close"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:textColor="#FF404040"
            android:textSize="24sp"
            tools:text="100.00 DCC"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_pay_dialog_text1"
                android:textColor="@color/FF9B9B9B"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                tools:text="123456789034567890-5678905678967890"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_pay_dialog_text2"
                android:textColor="@color/FF9B9B9B"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                tools:text="111111111"/>

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_pay_dialog_text3"
                android:textColor="@color/FF9B9B9B"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_pay_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:lines="1"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                tools:text="111111111"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_trust_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_pay_dialog_tip"
                android:textColor="#FF4A4A4A"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="чбошод"/>

    </LinearLayout>

</RelativeLayout>
