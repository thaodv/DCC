<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="io.wexchain.android.dcc.MyCreditActivity"
        >

    <data>

        <variable
                name="saleInfo"
                type="io.wexchain.android.dcc.domain.SaleInfo"
                />
        <variable
            name="minAmountPerHandDCC"
            type="String"
            />
        <variable
            name="totalamountDCC"
            type="String"
            />
        <variable
            name="lastamountDCC"
            type="String"
            />
        <variable
            name="canbuy"
            type="boolean"
            />

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/tvback"
                android:layout_width="19dp"
                android:layout_height="28dp"
                android:textSize="20sp"
                android:src="@drawable/arrow_left"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{saleInfo.name}"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tv_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="持仓"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#5756B3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_bluell"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="预期年化收益"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_marginBottom="38dp"
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{saleInfo.annualRateP() }"
                android:textColor="@color/white"
                android:textSize="31sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#6867CD"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="起购数量"
                    android:textColor="@color/white50"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_buylimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="@{minAmountPerHandDCC}"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/white50">

            </View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="管理期限"
                    android:textColor="@color/white50"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="@{saleInfo.periodDay() }"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="认购币种"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/realnamecert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="DCC"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="收益方式"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="@{saleInfo.profitMethod}"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="产品额度"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_productlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="@{totalamountDCC}"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="时间限制"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_timelimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="@{saleInfo.showCloseTime()}"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="剩余额度"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_lostlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="@{lastamountDCC}"
                android:textColor="@color/FFED190F"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="认购流程"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="250dp"
           android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FFEFEFEF"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView

                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_purpuledot"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_purpuledot"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_purpuledot"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

           >





            <LinearLayout
                 android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/ll_center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="起息日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_profitday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="@{saleInfo.showIncomeTime()}"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/ll_center"
                 android:minWidth="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="申购日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_buyday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="今日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                 android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ll_center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="到期日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_endday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="@{saleInfo.showEndTime()}"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>




        </RelativeLayout>

        <TextView
            android:layout_marginTop="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
android:text="到期日如为节假日，则在节假日后的第一个工作日到期"
            android:textSize="13sp"
            android:textColor="#FF4A4A4A"
            android:layout_marginBottom="28dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="产品简介"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@{saleInfo.presentation}"
            android:textSize="14sp"
            android:textColor="#FF4A4A4A"
            android:layout_marginBottom="15dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="本服务由【Token Plus】提供"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp"
android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tv_buyit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#B2484848"
            android:text="已结束"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>

</ScrollView>
</layout>
