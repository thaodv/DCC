<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="io.wexchain.android.dcc.MyCreditActivity"
        >

    <data>

        <variable
                name="asIdVm"
                type="io.wexchain.android.dcc.vm.AuthenticationStatusVm"
                />

        <variable
                name="asPersonalVm"
                type="io.wexchain.android.dcc.vm.AuthenticationStatusVm"
                />

        <variable
                name="asBankVm"
                type="io.wexchain.android.dcc.vm.AuthenticationStatusVm"
                />

        <variable
                name="asMobileVm"
                type="io.wexchain.android.dcc.vm.AuthenticationStatusVm"
                />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tvback"
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:textSize="20sp"
                android:background="@drawable/arrow_left"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DCC私链币生息1期"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tv_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="持仓"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#5756B3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_bluell"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="预期年化收益"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_marginBottom="38dp"
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="6.50%"
                android:textColor="@color/white"
                android:textSize="31sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#6867CD"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="起购数量"
                    android:textColor="@color/white50"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_buylimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="100 DCC"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@color/white50">

            </View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="管理期限"
                    android:textColor="@color/white50"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="28 天"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="认购币种"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/realnamecert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="DCC"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="收益方式"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="到期还本付息"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="产品额度"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_productlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="1,000,000 DCC"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="时间限制"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_timelimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="至6月9日23:59:59，或购完即止"
                android:textColor="@color/upgrade_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="剩余额度"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_lostlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 
                android:layout_marginRight="10dp"
                android:text="1000 DCC(64.3%)"
                android:textColor="@color/FFED190F"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="认购流程"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="250dp"
           android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            >
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#FFEFEFEF"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView

                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_purpuledot"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_lpurpledot"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_lpurpledot"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>


        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

           >





            <LinearLayout
                 android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/ll_center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="起息日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_profitday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="2018-04-26"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/ll_center"
                 android:minWidth="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="申购日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_buyday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="今日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                 android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ll_center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="到期日"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_endday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="2018-05-24"
                    android:textColor="@color/FF4A4A4A"
                    android:textSize="14sp" />


            </LinearLayout>




        </RelativeLayout>

        <TextView
            android:layout_marginTop="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
android:text="到期日如为节假日，则在节假日后的第一个工作日到期"
            android:textSize="13sp"
            android:textColor="#FF4A4A4A"
            android:layout_marginBottom="28dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                 
                android:text="产品简介"
                android:textColor="@color/FF4A4A4A"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EFEFEF"></View>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="  币生息DCC私链1期是面向DCC用户的一款固定周期、固定DCC收益的数字资产增值理财产品；具有：零风险（不包括数字资产本身价格的涨跌），保本保息、到期还本付息的特点。

      用户在募集期内可以认购币生息DCC私链1期理财产品，理财收益以DCC私链形式返回，平台为DCC用户提供DCC私链资产理财和到期自动赎回服务，于到期日的23:59:59之前，会自动将本金和收益（收益以DCC私链形式计息）返还到用户的钱包地址。

      本理财产品由基于Linux环境搭建的量化交易系统TokenPlus提供支持，作为回馈DCC用户的福利，无任何风险。用户可在【币生息持仓】中查看币生息理财产品的收益。"
            android:textSize="14sp"
            android:textColor="#FF4A4A4A"
            android:layout_marginBottom="15dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF8F8FF"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="本服务由【Token Plus】提供"
            android:textColor="#FF4A4A4A"
            android:textSize="14sp"
android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tv_buyit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#FF6766CC"
            android:text="认购"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            />


    </LinearLayout>

</ScrollView>
</layout>
