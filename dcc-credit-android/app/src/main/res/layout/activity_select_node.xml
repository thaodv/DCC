<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.wexchain.android.dcc.modules.selectnode.SelectNodeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar"/>

    <RadioGroup
        android:id="@+id/gr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/cb1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@drawable/selector_select_node"
            android:text="  以太坊节点-中国上海"/>

        <View style="@style/DividerHorizontal"/>

        <RadioButton
            android:id="@+id/cb2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@drawable/selector_select_node"
            android:text="  以太坊节点-中国北京"/>

        <View style="@style/DividerHorizontal"/>

        <RadioButton
            android:id="@+id/cb3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@drawable/selector_select_node"
            android:text="  以太坊节点-美国加州"/>

        <View style="@style/DividerHorizontal"/>

        <RadioButton
            android:id="@+id/cb4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@drawable/selector_select_node"
            android:text="  以太坊节点-美国马萨诸塞州"/>

        <View style="@style/DividerHorizontal"/>

    </RadioGroup>

</LinearLayout>
