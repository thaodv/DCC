<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="io.wexchain.android.dcc.modules.cashloan.vm.ContactsVm" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contacts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:text="@{vm.title}"
            android:textColor="@color/FF4A4A4A"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="联系人" />

        <TextView
            android:id="@+id/contacts_relation"
            style="@style/InfoTitleStyle"
            android:layout_marginTop="10dp"
            android:text="与你关系"
            app:layout_constraintLeft_toLeftOf="@id/contacts_title"
            app:layout_constraintTop_toBottomOf="@id/contacts_title" />

        <TextView
            android:id="@+id/contacts_select"
            style="@style/SelectBtnStyle"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:onClick="@{(v)->vm.selectRelation()}"
            android:text="@{vm.relation}"
            app:layout_constraintBaseline_toBaselineOf="@id/contacts_relation"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="请选择" />

        <View
            android:id="@+id/line1"
            style="@style/DividerHorizontal.Margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/contacts_relation" />

        <TextView
            android:id="@+id/contacts_phone_tag"
            style="@style/InfoTitleStyle"
            android:layout_marginTop="10dp"
            android:text="手机号"
            app:layout_constraintLeft_toLeftOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <EditText
            android:id="@+id/contacts_phonenum"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            app:addTextChangedListener="@{vm.phoneWatcher}"
            android:textColor="@color/FF4A4A4A"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/contacts_phone_tag" />

        <View
            android:id="@+id/line2"
            style="@style/DividerHorizontal.Margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/contacts_phone_tag" />

        <TextView
            android:id="@+id/contacts_name_tag"
            style="@style/InfoTitleStyle"
            android:layout_marginTop="10dp"
            android:text="真实姓名"
            app:layout_constraintLeft_toLeftOf="@id/line2"
            app:layout_constraintTop_toBottomOf="@id/line2" />

        <EditText
            android:id="@+id/contacts_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="请输入真实姓名"
            android:maxLength="16"
            app:addTextChangedListener="@{vm.nameWatcher}"
            android:textColor="@color/FF4A4A4A"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/contacts_name_tag" />

        <View
            android:id="@+id/line3"
            style="@style/DividerHorizontal.Margin"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/contacts_name_tag" />

    </android.support.constraint.ConstraintLayout>

</layout>