<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.wexchain.android.dcc.modules.trustpocket.TrustOpenSuccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="14dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:src="@drawable/img_trust_open_success"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="托管钱包开通成功！"
            android:textColor="#4A4A4A"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_real_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="为了保护账户安全，建议立即完成实名认证"
            android:textColor="#9B9B9B"
            android:textSize="14sp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/bt_realname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:text="去实名认证"
            android:textSize="15sp"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@color/trans"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#4A4A4A"
        android:textSize="16sp"
        tools:text="完成"/>

</RelativeLayout>
