<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:id="@+id/v_bg_white"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.DccTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_bg_white"
            app:layout_constraintBottom_toTopOf="@id/btn_to_create_wallet"
            android:text="BitEXPRESS"
            android:layout_marginTop="16dp"
            />

    <Button
        android:id="@+id/btn_to_create_wallet"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Dcc.Full"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/btn_to_import_wallet"
        android:text="@string/create_wallet"
        />

    <Button
        android:id="@+id/btn_to_import_wallet"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Dcc.Full"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_create_wallet"
        app:layout_constraintBottom_toBottomOf="@id/v_bg_white"
        android:layout_marginBottom="16dp"
        android:text="@string/import_wallet"
        />

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_blue_magenta"
        app:layout_constraintTop_toBottomOf="@id/v_bg_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:background="@null"
        />


</android.support.constraint.ConstraintLayout>