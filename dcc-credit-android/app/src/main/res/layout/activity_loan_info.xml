<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="io.wexchain.android.dcc.modules.cashloan.vm.LoanInfoVm" />

        <import type="io.wexchain.android.dcc.modules.cashloan.CashLoanHelper"/>

    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5FD"
        android:orientation="vertical"
        tools:context="io.wexchain.android.dcc.modules.cashloan.act.CashRecordDetailActivity">

        <include layout="@layout/include_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tag_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:text="@{vm.order.id}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="100203" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款金额："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="2000元" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手续费："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="0元" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款期限："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="14天" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="借款利息："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="50元" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="应还金额："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="2050元" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="应还日期："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="2018-10-01" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实际还款日："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="2018-10-01" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款银行卡："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="招商银行（尾号4622)" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="逾期罚息："
                            android:textColor="#4A4A4A"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#4A4A4A"
                            android:textSize="16sp"
                            tools:text="0元" />

                    </RelativeLayout>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        visibleOrGone="@{CashLoanHelper.loanShowItem1(vm.order.status)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:text="@{CashLoanHelper.loanDetailTips(vm.order.status)}"
                            tools:text="您的借款订单已经关闭"
                            android:textColor="@{CashLoanHelper.loanDetailColor(context,vm.order.status)}"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        visibleOrGone="@{CashLoanHelper.loanShowItem2(vm.order.status)}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="借款协议"
                                android:textColor="#4A4A4A"
                                android:textSize="16sp" />

                            <Button
                                style="@style/Widget.AppCompat.Button.Dcc.Violet"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:text="查看"
                                android:onClick="@{(v)->vm.loanAgreement()}"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:text="@{CashLoanHelper.loanDetailTips(vm.order.status)}"
                            tools:text="您的借款正在放款中，请稍后..."
                            android:textColor="@{CashLoanHelper.loanDetailColor(context,vm.order.status)}"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        visibleOrGone="@{CashLoanHelper.loanShowItem3(vm.order.status)}"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/tag1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="借款协议"
                                android:textColor="#4A4A4A"
                                android:textSize="16sp" />

                            <Button
                                style="@style/Widget.AppCompat.Button.Dcc.Violet"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:text="查看"
                                android:onClick="@{(v)->vm.loanAgreement()}"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            tools:text="您的借款订单已结清"
                            android:text="@{CashLoanHelper.loanDetailTips(vm.order.status)}"
                            android:textColor="@{CashLoanHelper.loanDetailColor(context,vm.order.status)}"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tag1" />

                        <Button
                            android:id="@+id/btn"
                            style="@style/Widget.AppCompat.Button.Dcc.Full"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:onClick="@{(v)->vm.confirm()}"
                            android:text="@{CashLoanHelper.loanConfirmTxt(vm.order.status)}"
                            tools:text="再次借款"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <View
                            android:id="@+id/ttt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toTopOf="@id/btn"
                            app:layout_constraintTop_toBottomOf="@id/text" />


                    </android.support.constraint.ConstraintLayout>

                </FrameLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
