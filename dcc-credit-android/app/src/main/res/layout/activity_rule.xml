<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.wexchain.android.dcc.modules.redpacket.RuleActivity">

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:id="@+id/sc_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_redpacket_rule1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_redpacket_rule2"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_rule_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="yuiojbnbm "/>

            </RelativeLayout>

            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_redpacket_rule2"/>-->

            <Button
                android:id="@+id/bt_invite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#FFCB2A"
                android:text="邀请好友 领微信红包"
                android:textColor="#D00F1A"
                android:textSize="14sp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
