<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.wexchain.android.dcc.MyCreditActivity">

    <data>

        <variable
            name="asIdVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asPersonalVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asBankVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />

        <variable
            name="asMobileVm"
            type="io.wexchain.android.dcc.vm.AuthenticationStatusVm" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="enterAlways">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/header_certification"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0" />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginBottom="40dp"
                        app:layout_collapseMode="pin">

                    </android.support.v7.widget.Toolbar>

                    <TextView
                        android:id="@+id/toolbar_title"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/text_white"
                        app:layout_collapseMode="pin"
                        tools:text="title标题" />
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/coor_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-56dp"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="60dp">

                    <include
                        android:id="@+id/card_as_id"
                        layout="@layout/include_card_auth_status"
                        app:vm="@{asIdVm}" />

                    <include
                        android:id="@+id/card_as_personal"
                        layout="@layout/include_card_auth_status"
                        android:visibility="gone"
                        app:vm="@{asPersonalVm}" />

                    <include
                        android:id="@+id/card_as_bank"
                        layout="@layout/include_card_auth_status"
                        app:vm="@{asBankVm}" />

                    <include
                        android:id="@+id/card_as_mobile"
                        layout="@layout/include_card_auth_status"
                        app:vm="@{asMobileVm}" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/credit_ipfs_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/credit_ipfs_cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="认证数据云存储 >"
                android:textColor="@color/blue_magenta" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</layout>
