<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="io.wexchain.android.dcc.vm.ViewModelHelper"/>

        <variable
            name="vm"
            type="io.wexchain.android.dcc.vm.DccExchangeVm"/>

        <variable
            name="tx"
            type="io.wexchain.android.dcc.modules.trans.vm.Public2PrivateVm"
            />

        <variable
            name="passport"
            type="io.wexchain.android.dcc.domain.Passport"
            />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        tools:context="io.wexchain.android.dcc.modules.trans.activity.Public2PrivateActivity">

        <include layout="@layout/include_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dcc_frame_blue"
                android:padding="10dp">

                <View
                    android:id="@+id/v_line_tip2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerInParent="true"
                    android:background="#FFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/v_line_tip2"
                    android:text="DCC\n@Ethereum"
                    android:textColor="#FFF"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_line_tip2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@{ViewModelHelper.getBalanceStr(vm.dcc,vm.publicHolding)}"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    tools:text="10.00"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_trans_public2private"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dcc_frame_orange"
                android:padding="10dp">

                <View
                    android:id="@+id/v_line_tip1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_centerInParent="true"
                    android:background="#FFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/v_line_tip1"
                    android:text="DCC\n@Distributed Credit Chain"
                    android:textColor="#FFF"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_line_tip1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@{ViewModelHelper.getBalanceStr(vm.dcc,vm.juzixHolding)}"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    tools:text="10.00"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/across_trans_count"
            android:textColor="#404040"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_trans_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="@={tx.amount}"
                tools:text="100"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/dcc"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"
                />

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/across_trans_public_count"
                android:textColor="#404040"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_public_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{ViewModelHelper.getBalanceStr(vm.dcc,vm.publicHolding)}"
                android:textColor="#404040"
                android:textSize="16sp"
                tools:text="1000"/>

            <Button
                android:id="@+id/bt_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:background="@null"
                android:text="@string/all"
                android:textColor="#5756B3"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_height="10dp"
            android:background="#F8F8FF"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Gas Price"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"/>

            <EditText
                android:id="@+id/et_gas_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="@string/custom_gas_price"
                android:inputType="numberDecimal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="@={tx.gasPrice}"
                tools:text="50"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/gwei"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"
                />

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Gas Limit"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"/>

            <EditText
                android:id="@+id/et_ges_limit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="@string/custom_gas_limit"
                android:inputType="numberDecimal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="@={tx.gasLimit}"
                android:textColor="@color/text_dark"
                tools:text="50"
                />


        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/Maximum_absenteeism"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"/>

            <EditText
                android:id="@+id/et_absenteeism"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:inputType="numberDecimal"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="@={tx.maxTransactionFeeText}"
                android:textColor="@color/text_dark"
                tools:text="50"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="ETH"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/text_dark"
                />

        </RelativeLayout>

        <View
            style="@style/DividerHorizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_warning"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_warning"
                android:text="@string/across_trans_warning_tip"
                android:textColor="#4A4A4A"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_warning"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/across_trans_warning_tips2"
                android:textColor="#4A4A4A"
                android:textSize="14sp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:onClick="@{(v)->tx.checkAndProceed(passport.address)}"
            android:text="@string/next"
            android:textColor="#FFF"
            android:textSize="15sp"/>

    </LinearLayout>

</layout>
