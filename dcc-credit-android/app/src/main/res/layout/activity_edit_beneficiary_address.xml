<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="io.wexchain.android.dcc.EditBeneficiaryAddressActivity"
        >

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <include
                layout="@layout/include_toolbar"
                android:id="@+id/toolbar"
                />

        <android.support.constraint.Guideline
                android:id="@+id/gl_v1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="120dp"
                android:orientation="vertical"
                />

        <EditText
                android:id="@+id/et_input_address_short_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxLength="10"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintLeft_toRightOf="@id/gl_v1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:hint="请设置地址简称"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="地址简称"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/gl_v1"
                app:layout_constraintBaseline_toBaselineOf="@id/et_input_address_short_name"
                android:gravity="center_vertical"
                />

        <View
                android:id="@+id/divider_h1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_stroke_width"
                style="@style/DividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/et_input_address_short_name"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                />

        <EditText
                android:id="@+id/et_input_address"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/divider_h1"
                app:layout_constraintLeft_toRightOf="@id/gl_v1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:hint="请输入收币地址"
                />

        <ImageButton
                android:id="@+id/ib_scan_address"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_scan"
                app:layout_constraintTop_toTopOf="@id/et_input_address"
                app:layout_constraintBottom_toBottomOf="@id/et_input_address"
                app:layout_constraintRight_toRightOf="@id/et_input_address"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="收币地址"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/gl_v1"
                app:layout_constraintBaseline_toBaselineOf="@id/et_input_address"
                android:gravity="center_vertical"
                />

        <View
                android:id="@+id/divider_h2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_stroke_width"
                style="@style/DividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/et_input_address"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                />

        <CheckBox
                android:id="@+id/check_default_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/divider_h2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:button="@drawable/check_button_rect"
                android:textColor="@color/text_dark"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设置为默认地址"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                app:layout_constraintRight_toLeftOf="@id/gl_v1"
                app:layout_constraintBaseline_toBaselineOf="@id/check_default_address"
                android:gravity="center_vertical"
                />

        <View
                android:id="@+id/divider_h3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_stroke_width"
                style="@style/DividerHorizontal"
                app:layout_constraintTop_toBottomOf="@id/check_default_address"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                />

        <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Dcc.Full"
                android:layout_marginLeft="@dimen/content_padding_horizontal"
                android:layout_marginRight="@dimen/content_padding_horizontal"
                android:text="保存"
                app:layout_constraintTop_toBottomOf="@id/divider_h3"
                android:layout_marginTop="16dp"
                />

    </android.support.constraint.ConstraintLayout>

</layout>
