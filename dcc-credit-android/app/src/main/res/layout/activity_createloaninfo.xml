<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="io.wexchain.android.dcc.modules.cashloan.vm.CreateLoanVm" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款金额"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2000元"
                        android:textColor="#7B40FF"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款期限"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="14天"
                        android:textColor="#ED190F"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款周期"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2018.10.01-2018.10.14"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款利息"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="36%"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到账金额"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2000元"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款利息"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="400元"
                        android:textColor="#4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View style="@style/DividerHorizontal.Margin" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/money_dcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扣款3200DCC抵扣400元手续费"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <io.wexchain.android.dcc.view.SwitchButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/dcc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="当前DCC持有量:\n1DCC=0.05rmb"
                        android:textColor="#9b9b9b"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/money_dcc" />

                    <TextView
                        android:id="@+id/dcc_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000.00DCC"
                        android:textColor="#000"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toRightOf="@id/dcc_title"
                        app:layout_constraintTop_toBottomOf="@id/money_dcc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="持有量不足抵扣"
                        android:textColor="#ED190F"
                        android:textSize="13sp"
                        app:layout_constraintLeft_toRightOf="@id/dcc_num"
                        app:layout_constraintTop_toBottomOf="@id/dcc_title" />

                </android.support.constraint.ConstraintLayout>

                <View
                    style="@style/DividerHorizontal"
                    android:layout_height="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="还款总额 "
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="10000元 "
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View style="@style/DividerHorizontal.Margin" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="收款银行卡"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/bank_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:onClick="@{(v)->vm.showbankCard()}"
                        android:text="@{vm.bankCardNum}"
                        tools:text="尾号0102"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="16sp" />

                </RelativeLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray_alpha"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款日从该卡直接扣款"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/commit"
                        style="@style/Widget.AppCompat.Button.Dcc.Full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="提交"
                        android:onClick="@{(v)->vm.confirmLoan()}"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/check_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:drawableLeft="@{vm.agreement?@drawable/tv_state_enabled:@drawable/tv_state_disabled}"
                        android:drawablePadding="8dp"
                        android:onClick="@{(v)->vm.checkAgreement()}"
                        android:text="已阅读并同意"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@id/commit"
                        tools:drawableLeft="@drawable/tv_state_enabled" />

                    <TextView
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:text=" 《借款服务协议》"
                        android:onClick="@{(v)->vm.showAgreement()}"
                        app:layout_constraintLeft_toRightOf="@id/check_agreement"
                        app:layout_constraintBaseline_toBaselineOf="@id/check_agreement"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:drawableLeft="@drawable/icon_warning"
                        android:drawablePadding="8dp"
                        android:text="温馨提示："
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@id/check_agreement" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:drawablePadding="8dp"
                        android:text="提交后无法变更借款信息，若要取消借款申请，需联系客服xxxxxxx"
                        android:textColor="@color/FF4A4A4A"
                        android:textSize="13sp"
                        app:layout_constraintTop_toBottomOf="@id/tips" />


                </android.support.constraint.ConstraintLayout>


            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

</layout>
