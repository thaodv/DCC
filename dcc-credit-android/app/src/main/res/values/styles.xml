<resources>

    <style name="CardView.Light.Dcc">
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="AnimationDcc">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
    </style>

    <style name="AnimationDccSlideBottom">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_exit</item>
    </style>

    <style name="Widget.AppCompat.Button.Dcc" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppCompat.Button.Dcc.Violet" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/background_violet</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppCompat.Button.Dcc.Small">
        <item name="android:minHeight">23dp</item>
        <item name="android:textSize">@dimen/text_size_supplementary</item>
    </style>

    <style name="Widget.AppCompat.Button.Dcc.Medium">
        <item name="android:minHeight">30dp</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="Widget.AppCompat.Button.Dcc.Full">
        <item name="android:minHeight">37dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.AppCompat.ImageButton.Dcc">
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.AppCompat.Spinner.Dcc">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="Widget.AppCompat.TextView.SpinnerItem.Dcc">
        <item name="android:textColor">@color/text_color_spinner</item>
    </style>

    <style name="Widget.AppCompat.Light.DropDownItem.Spinner.Dcc">
        <item name="android:textColor">@color/text_color_spinner</item>
    </style>

    <style name="NoticeTextLabel">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/content_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/content_padding_horizontal</item>
        <item name="android:background">@color/light_blue_magenta</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="Widget.AppCompat.EditText.Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">@dimen/content_padding_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="TextAppearance.AppCompat.DccTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.DccSubTitle">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextAppearance.AppCompat.DccSupplementary">
        <item name="android:textSize">@dimen/text_size_supplementary</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextAppearance.AppCompat.DccProviderHeadline">
        <item name="android:textColor">@color/text_blue_magenta</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_stroke_width</item>
        <item name="android:background">@color/light_gray_alpha</item>
    </style>

    <style name="DividerHorizontal.Margin">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="LayoutMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">@dimen/divider_stroke_width</item>
        <item name="android:background">@color/light_gray_alpha</item>
    </style>

    <style name="TextActionLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">#FFF</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingLeft">@dimen/content_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/content_padding_horizontal</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.RadioButton.Dcc">
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.RadioButton.Dcc.Label">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_radio_label</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="deleteAddressBookDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="BadgeText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/badge_top_margin</item>
        <item name="android:paddingRight">@dimen/badge_width_padding</item>
        <item name="android:paddingLeft">@dimen/badge_width_padding</item>
        <item name="android:paddingBottom">@dimen/badge_height_padding</item>
        <item name="android:paddingTop">@dimen/badge_height_padding</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDcc</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!--密码输入layout-->
    <declare-styleable name="PassWordLayoutStyle">
        <attr name="box_input_color" format="reference"/>//输入框输入状态颜色
        <attr name="box_no_input_color" format="reference"/>//输入框未输入状态颜色
        <attr name="input_line_color" format="reference"/>//输入线颜色
        <attr name="text_input_color" format="reference"/>//文本颜色
        <attr name="interval_width" format="dimension"/>//间隔
        <attr name="item_width" format="dimension"/>//子View宽
        <attr name="item_height" format="dimension"/>//子View高
        <attr name="draw_txt_size" format="dimension"/>//文本大小
        <attr name="draw_box_line_size" format="dimension"/>//输入线条大小
        <attr name="is_show_input_line" format="boolean"/>//是否显示输入线
        <attr name="pass_inputed_type">//密码输入显示内容
            <flag name="circle" value="0" />
            <flag name="stars" value="1" />
            <flag name="text" value="2" />
        </attr>
        <attr name="box_draw_type">//密码框形状
            <flag name="rect" value="0" />
            <flag name="circle" value="1" />
            <flag name="line" value="2" />
        </attr>
        <attr name="pass_leng">//密码长度 只考虑4 6 8
            <flag name="four" value="4" />
            <flag name="six" value="6" />
            <flag name="eight" value="8" />
        </attr>
    </declare-styleable>

</resources>
