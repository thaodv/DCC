<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hjm="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <data>
        <import type="android.view.View"/>
        <variable
            name="statusEnabled"
            type="boolean"/>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/include_toolbar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textSize="18sp"
android:text="请输入您的手机号并验证"
            android:textColor="@color/textPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_line"></View>

        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/phonelable"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="18sp"
                android:text="手机号码"
                android:textColor="@color/textPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_pn"
                android:gravity="left"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:hint="请输入您的手机号"

                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_line"></View>

        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/certnolable"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textSize="18sp"
                android:text="验证码"
                android:textColor="@color/textPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/et_valid"
                android:gravity="left"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
                android:maxLength="6"

                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                />

            <TextView
                android:id="@+id/tv_getcertno"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="免费获取"
                android:textColor="@color/purple"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/rectanglepurple"
                />

        </RelativeLayout>
        <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_line"></View>

        <Button
            android:id="@+id/bt_submit"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="提交"
            android:textSize="20sp"
            android:background="@drawable/bgbtpurple"
            android:textColor="@color/white"
            />


</LinearLayout>




</layout>