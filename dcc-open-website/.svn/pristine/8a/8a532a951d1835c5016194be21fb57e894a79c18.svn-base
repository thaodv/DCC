<script>
  $(document).ready(function () {
    $('.credit').click(function () {
      $('.credit, .loan').removeClass('active')
      $(this).addClass('active')
      $('.credit-part').show()
      $('.loan-part').hide()
    })
    $('.loan').click(function () {
      $('.credit, .loan').removeClass('active')
      $(this).addClass('active')
      $('.credit-part').hide()
      $('.loan-part').show()
    })
  })

</script>

